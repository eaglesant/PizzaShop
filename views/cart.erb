<h2>List of Ordered Products(Cart)</h2>
<table class="table table-striped">
 	<thead>
 		<tr>
 			<th>#</th>
 			<th>Product</th>
 			<th>Price</th>
 			<th>Quantity</th>
 			<th>Summ</th>
 		</tr>
 	</thead>
 	<tbody>
 		<% @arr.each do |item| %>
			<tr>
				<td><%= item[0].id %></td>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
				<td><%= item[1] %></td>
				<td><%= item[1].to_i * item[0].price %></td>
			</tr>
			<% @qtt += item[1].to_i  %>
			<% @summ += item[0].price * item[1].to_i %>
 		<% end %>
 	</tbody>
 	<tfoot>
 		<tr>
 			<th>Total</th>
 			<td></td>
 			<td></td>
 			<th><%= @qtt %></th>
 			<th><%= @summ %></th>
 		</tr>
 	</tfoot>
</table>