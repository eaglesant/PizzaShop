<h2>List of Ordered Products(Cart)</h2>
<table class="table table-striped">
 	<thead>
 		<tr>
 			<th>#</th>
 			<th>Product</th>
 			<th>Price</th>
 			<th>Quantity</th>
 			<th>Summ</th>
 		</tr>
 	</thead>
 	<tbody>
 		<% @arr.each do |item| %>
			<tr>
				<td><%= item[0].id %></td>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
				<td><%= item[1] %></td>
				<td><%= item[1].to_i * item[0].price %></td>
			</tr>
			<% @qtt += item[1].to_i  %>
			<% @summ += item[0].price * item[1].to_i %>
 		<% end %>
 	</tbody>
 	<tfoot>
 		<tr>
 			<th>Total</th>
 			<td></td>
 			<td></td>
 			<th><%= @qtt %></th>
 			<th><%= @summ %></th>
 		</tr>
 	</tfoot>
</table>
<br>
<br>
<br>
<h2>Your Order</h2>

<form action="/place_order" method="POST" style="width: 370px;">
    <div class="form-group">
    <input type="text" name="order[order]" type="text" class="form-control" value="<%= @orders %>">
  </div>
  <div class="form-group">
    <label for="user_name">Your name</label>
    <input type="text" name="order[name]" class="form-control" id="user_name" placeholder="Enter your name" ">
  </div>
  <div class="form-group">
    <label for="phone">Your phone</label>
    <input type="text" name="order[phone]" class="form-control" id="phone" placeholder="Your phone">
  </div>

  <div class="form-group">
    <label for="address">Your address</label>
    <input type="text" name="order[address]" class="form-control" id="phone" placeholder="Your phone">
  </div>
  <button type="submit" class="btn btn-success btn-lg">Ordered</button>
</form>

